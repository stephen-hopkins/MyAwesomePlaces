<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <Button
        android:id="@+id/buttonSearchNearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchNearby" 
        android:onClick="buttonSearchNearbyClicked" />

    <TextView
        android:id="@+id/findText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find"
        android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
        android:id="@+id/searchParameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" > 
        <requestFocus />
    </EditText>
    
    <RadioButton
        	android:id="@+id/radioWithin"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/within" 
        	android:checked="true" 
        	android:onClick="onRadioButtonClicked"/>

    <Spinner
        android:id="@+id/spinnerDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RadioButton
        	android:id="@+id/radioAnywhere"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/anywhere" 
        	android:onClick="onRadioButtonClicked"/>
    
    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search" 
        android:onClick="buttonSearchClicked"
        />

    <TextView
        android:id="@+id/placeOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/addressOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress" />

</LinearLayout>